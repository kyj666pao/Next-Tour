<%- include('../partials/html-head') %> 
  <link rel="stylesheet" href="/stylesheets/main.css" />
<%- include('../partials/nav') %>

<h1><%= title %></h1>
<main>
  <div>
    <form action="/posts" method="POST" class="form">
      <div class="QA">
        <label for="topic">Topic:</label>
        <input
          type="text"
          name="topic"
          id="topic"
          placeholder="Add an attraction or Add a site"
          required
        />
      </div>
      <div class="QA">
        <label for="photo">Photo(url):</label>
        <input
          type="text"
          name="photo"
          id="photo"
          placeholder="Link(url) of best photo of this trip"
        />
      </div>

      <p class="location-note">Select the destination from the list:</p>
      <div class="QA">
        <label for="destination">Location</label>
        <select name="destinationId" id="">
          <option value="" selected> </option>
          <% destinations.forEach(destination => { %>
           <option value="<%= destination._id %>"
            ><%= destination.name %>, <%= destination.state %></option>
          <% }) %>
        </select>
      </div>

      <p class="location-note">If the location is not on list, Share this secret place</p>
      <div class="QA">
        <label for="location">Location</label>
        <input
          type="text"
          name="location"
          id="location"
          placeholder="Add the name of the location"
        />
      </div>
      <div class="QA">
        <label for="state">State:</label>
        <select name="state" id="state">
          <option value=""> </option>
          <% state.forEach(state => { %>
            <option value="<%= state %>"><%= state %></option>
          <% }) %>
        </select>
          
      </div>
      <div class="QA">
        <label for="content">Content:</label>
        <textarea
          name="content"
          id="content"
          rows="10"
          placeholder="Share your joyful moment here"
        ></textarea>
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>
</main>

<%- include('../partials/footer') %>
